{
  "manifest_version": 2,
  "name": "Escape 21",
  "description": "Build an Extension!",
  "version": "0.1",
  "permissions": [
    "management",
    "tabs",
    "activeTab",
    "idle",
    "unlimitedStorage",
    "webNavigation",
    "storage",
    "declarativeContent",
    "contextMenus",
    "browser_action"
  ],
  "background": {
    "scripts": [
      "/modules/jquery-3.5.0.min.js",
      "/modules/html2canvas.min.js",
      "/common/color-collector.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_name": "Browsing stats",
    "default_icon": "popup/popup.png",
    "default_popup": "popup/popup.html",
    "default_title": "This is a tooltip"
  }
}